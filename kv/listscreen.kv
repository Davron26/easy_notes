#:import Window kivy.core.window.Window

<ListScreen>:
    ScrollView:
        do_scroll_x: False
        do_scroll_y: True
        GridLayout:
            id: gl
            size_hint_y: None
            height: self.minimum_height
            padding: [50, 75, 50, 0]
            spacing: 50
            cols: 1
    FloatLayout:
        id: fl
        Label:
            text: "Списки"
            pos_hint: {"middle": 1, "y": .4}
            color: [0, 0, 0, 1]
        ImageButton:
            allow_stretch: True
            keep_ratio: False
            size_hint_max: (Window.height / 10, Window.height / 10)
            pos_hint: {"x": .8, "y": .85}
            source: "images/plus.png"
            on_release:
                #app.change_screen("notes")
                app.create_list()

